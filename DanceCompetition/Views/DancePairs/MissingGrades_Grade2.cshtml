@model DanceCompetition.Models.DancePairViewModel

@{
    ViewData["Title"] = "Grade 2";
}

<h1>Grade 2</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Grade
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MissingGrade2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @using (Html.BeginForm("ChangeGrade", "DancePairs", FormMethod.Post))
                    {
                        @foreach (int grade in new[] { 1, 2, 3, 4, 5 })
                        {
                            <button type="submit" name="grade_value" value="@grade" class="btn btn-primary">@grade</button>
                        }
                        @Html.Hidden("id", item.Id, new {@Value=item.Id})
                        @Html.Hidden("grade", 2, new {@Value=2})
                    }
                </td>
            </tr>
        }
    </tbody>
</table>